<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ilyas.titresim_oyunu.MainActivity">

    <TextView
        android:id="@+id/skor"
        android:layout_width="142dp"
        android:layout_height="60dp"
        android:layout_below="@+id/sure"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="44dp"
        android:layout_toEndOf="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="53dp"
        android:gravity="center"
        android:text="SKOR:"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="372dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="25dp"
        android:layout_toStartOf="@+id/skor_goster"
        android:layout_toLeftOf="@+id/skor_goster"
        android:background="@android:color/holo_orange_dark"
        android:text="BAŞLA"
        android:textColor="@android:color/background_light"
        android:textSize="35dp" />

    <Button
        android:id="@+id/skor_goster"
        android:layout_width="160dp"
        android:layout_height="78dp"
        android:layout_above="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/holo_green_light"
        android:text="PUANLAR"
        android:textColor="@android:color/background_light"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/sure"
        android:layout_width="128dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/textView5"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_toEndOf="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="25dp" />


    <TextView
        android:id="@+id/kullanici_adi"
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:layout_below="@+id/kullanici_adi"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="38dp"
        android:gravity="center"
        android:text="SÜRE:"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

</RelativeLayout>
